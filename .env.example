# ================================
# MICUOTA MVP - Environment Variables
# ================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env file to version control!

# ================================
# APPLICATION CONFIGURATION
# ================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ================================
# DATABASE CONFIGURATION
# ================================
# Development (Docker)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/micuota
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=root

# Production (Replace with your actual database)
# SPRING_DATASOURCE_URL=jdbc:postgresql://your-prod-host:5432/micuota_prod
# SPRING_DATASOURCE_USERNAME=your_db_user
# SPRING_DATASOURCE_PASSWORD=your_secure_password

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# ================================
# JWT SECURITY CONFIGURATION
# ================================
# IMPORTANT: Change this secret for production!
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=ChangeThisSecretKeyForJWTSigning
JWT_EXPIRATION=86400000

# Production JWT Secret (example - generate your own!)
# JWT_SECRET=your_super_secure_256_bit_secret_key_here_for_production_use_only

# ================================
# MERCADOPAGO CONFIGURATION
# ================================
# Get these values from: https://www.mercadopago.com/developers/
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_CLIENT_ID=
MERCADOPAGO_CLIENT_SECRET=
MERCADOPAGO_WEBHOOK_SECRET=

# Set to false for production
MERCADOPAGO_SANDBOX=true

# ================================
# LOGGING CONFIGURATION
# ================================
LOGGING_LEVEL_COM_MICUOTA=DEBUG
LOGGING_LEVEL_ROOT=INFO

# ================================
# CORS CONFIGURATION (if needed)
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080